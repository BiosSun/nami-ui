{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES6",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "jsx": "react-jsx",
        "strict": true,
        "pretty": true,
        "sourceMap": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "exclude": []
}
